const int ldrPin = A0;
const int ledPin = 3;
const int emergencyPin = 6;

int ldrThreshold = 400; // Dark if below this
int timeInSeconds = 0;

void setup() {
  Serial.begin(9600);
  pinMode(ledPin, OUTPUT);
  pinMode(emergencyPin, INPUT_PULLUP); // active LOW
}

void loop() {
  bool emergency = digitalRead(emergencyPin) == LOW;
  int ldrValue = analogRead(ldrPin);

  Serial.print("Time: ");
  Serial.print(timeInSeconds);
  Serial.print("s | LDR: ");
  Serial.print(ldrValue);

  if (emergency) {
    digitalWrite(ledPin, LOW);
    Serial.println(" | ðŸš¨ EMERGENCY: LED OFF");
  }
  else if (timeInSeconds > 20) {
    digitalWrite(ledPin, LOW);
    Serial.println(" | â° Time > 20s â†’ LED OFF (Timer cutoff)");
  }
  else if (ldrValue < ldrThreshold) {
    digitalWrite(ledPin, HIGH);
    Serial.println(" | ðŸŒ™ Dark â†’ LED ON");
  }
  else {
    digitalWrite(ledPin, LOW);
    Serial.println(" | â˜€ï¸ Bright â†’ LED OFF");
  }

  delay(1000);  // simulate 1 second
  timeInSeconds++;

  // â±ï¸ Reset the cycle after 30 seconds
  if (timeInSeconds >= 30) {
    Serial.println("ðŸ”„ Timer reset to 0");
    timeInSeconds = 0;
  }
}
